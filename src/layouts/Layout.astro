---
export interface Props {
	title: string;
	class?: string;
}

const { title, class: _class } = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class={_class}>
		<slot />
	</body>
</html>